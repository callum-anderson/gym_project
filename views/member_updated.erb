<p>Member updated:</p>
<ul>
<li>Name: <%= @member.first_name %> <%= @member.last_name %></li>
<li>Age: <%= @member.age %></li>
<li>Contact number: <%= @member.contact_number %></li>
<li>Email: <%= @member.email %></li>
</ul>

<% @all_members.each do |m| %>
  <form action="/update_member/<%= m.id %>" method="post">
    First name: <input name="first_name" value="<%= m.first_name %>"><br>
    Last name: <input name="last_name" value="<%= m.last_name %>"><br>
    Age: <input name="age" value="<%= m.age %>"><br>
    Contact: <input name="contact_number" value="<%= m.contact_number %>"><br>
    Email: <input name="email" value="<%= m.email %>"><br>
    <input type="submit" value="Update">
  </form>
  <form action="/delete_member/<%= m.id %>" method="post">
    <input hidden name="first_name" value="<%= m.first_name %>">
    <input hidden name="last_name" value="<%= m.last_name %>">
    <input hidden name="age" value="<%= m.age %>">
    <input hidden name="contact_number" value="<%= m.contact_number %>">
    <input hidden name="email" value="<%= m.email %>">
    <input type="submit" value="Delete">
  </form>
<% end %>
