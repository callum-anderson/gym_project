<p>Class deleted:</p>
<ul>
<li>Name: <%= @gym_class.name %></li>
<li>Capacity: <%= @gym_class.capacity %></li>
</ul>

<% @all_classes.each do |c| %>
  <form action="/update_class/<%= c.id %>" method="post">
    Class: <input name="name" value="<%= c.name %>"><br>
    Capacity: <input name="capacity" value="<%= c.capacity %>"><br>
    <input type="submit" value="Update">
  </form>
  <form action="/delete_class/<%= c.id %>" method="post">
    <input hidden name="name" value="<%= c.name %>">
    <input hidden name="capacity" value="<%= c.capacity %>">
    <input type="submit" value="Delete">
  </form>
<% end %>
